/* pages/my/index.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 60rpx;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #f97316 0%, #fbbf24 100%);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  color: #fff;
}

.user-main {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.credit-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  flex: 1;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-right: 16rpx;
}

.level-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  background: rgba(255, 255, 255, 0.25);
}

.credit-display {
  display: flex;
  align-items: baseline;
}

.credit-score {
  font-size: 56rpx;
  font-weight: 800;
  margin-right: 12rpx;
}

.credit-label {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 任务卡片 */
.task-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.task-date {
  font-size: 24rpx;
  color: #9ca3af;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
}

.task-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #9ca3af;
  margin-right: 20rpx;
  font-weight: 600;
}

.task-icon-wrapper.completed {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: #fff;
}

.task-content {
  flex: 1;
}

.task-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 4rpx;
}

.task-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.task-status {
  font-size: 30rpx;
  font-weight: 700;
  color: #6b7280;
}

.task-status .completed {
  color: #22c55e;
}

/* 徽章卡片 */
.badge-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.badge-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.badge-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.badge-count {
  font-size: 24rpx;
  color: #9ca3af;
}

.badge-list {
  display: flex;
  gap: 20rpx;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.badge-emoji {
  font-size: 64rpx;
  margin-bottom: 8rpx;
}

.badge-name {
  font-size: 22rpx;
  color: #6b7280;
  text-align: center;
}

/* 菜单卡片 */
.menu-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #fff7ed;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.menu-name {
  flex: 1;
  font-size: 30rpx;
  color: #1f2937;
  font-weight: 500;
}

.menu-arrow {
  font-size: 36rpx;
  color: #9ca3af;
  font-weight: 300;
}
