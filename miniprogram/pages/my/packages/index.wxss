/* pages/my/packages/index.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 标签切换 */
.tabs-section {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tabs {
  display: flex;
  gap: 16rpx;
}

.tab {
  flex: 1;
  padding: 16rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #6b7280;
  background: #f3f4f6;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.tab.active {
  background: linear-gradient(135deg, #f97316 0%, #fbbf24 100%);
  color: #fff;
  font-weight: 600;
}

/* 礼包列表 */
.package-list {
  padding: 20rpx;
}

.package-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.type-badge {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.type-badge.link {
  background: #fff7ed;
  color: #f97316;
}

.type-badge.image {
  background: #eff6ff;
  color: #3b82f6;
}

.type-icon {
  margin-right: 8rpx;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-badge.active {
  background: #dbeafe;
  color: #1e40af;
}

.status-badge.completed {
  background: #dcfce7;
  color: #166534;
}

.status-badge.cancelled {
  background: #f3f4f6;
  color: #6b7280;
}

.status-badge.pending {
  background: #fef3c7;
  color: #92400e;
}

/* 内容预览 */
.card-content {
  margin-bottom: 24rpx;
}

.content-preview {
  border-radius: 16rpx;
  overflow: hidden;
}

.link-preview {
  background: #fff7ed;
  border: 2rpx solid #fed7aa;
  padding: 30rpx;
}

.preview-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #f97316;
  display: block;
  margin-bottom: 12rpx;
}

.preview-url {
  font-size: 24rpx;
  color: #9ca3af;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 300rpx;
  background: #f9fafb;
}

.image-preview image {
  width: 100%;
  height: 100%;
}

/* 进度区域 */
.progress-section {
  margin-bottom: 24rpx;
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #6b7280;
}

.progress-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #f97316;
}

.progress-bar {
  height: 12rpx;
  background: #f3f4f6;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #f97316 0%, #fbbf24 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-hint {
  font-size: 26rpx;
  color: #6b7280;
}

/* 操作栏 */
.action-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  line-height: 1;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: #fff7ed;
  color: #f97316;
  border: 2rpx solid #fed7aa;
}

.action-btn.danger {
  background: #fef2f2;
  color: #ef4444;
  border: 2rpx solid #fecaca;
}

/* 时间信息 */
.time-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 更正历史 */
.adjustment-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f3f4f6;
}

.adjustment-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  padding: 12rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
}

.adjustment-text {
  font-size: 26rpx;
  color: #6b7280;
}

.adjustment-reason {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #6b7280;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: #6b7280;
  font-size: 28rpx;
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 32rpx;
  width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.modal-close {
  font-size: 40rpx;
  color: #9ca3af;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.current-info {
  margin-bottom: 30rpx;
}

.info-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 12rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 16rpx;
  white-space: nowrap;
}

.adjust-input {
  flex: 1;
  height: 80rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #f97316;
  text-align: center;
}

.input-unit {
  font-size: 28rpx;
  color: #6b7280;
  margin-left: 16rpx;
}

.reason-group {
  margin-bottom: 24rpx;
}

.reason-input {
  width: 100%;
  height: 160rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
  margin-top: 12rpx;
}

.adjust-hint {
  text-align: center;
  font-size: 26rpx;
  color: #f97316;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 40rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.modal-btn::after {
  border: none;
}

.modal-btn.secondary {
  background: #f3f4f6;
  color: #6b7280;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #f97316 0%, #fbbf24 100%);
  color: #fff;
}
